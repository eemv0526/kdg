<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE form-validation PUBLIC 
    "-//Apache Software Foundation//DTD Commons Validator Rules Configuration 1.1//EN" 
    "http://jakarta.apache.org/commons/dtds/validator_1_1.dtd">

<form-validation>

    <formset>
        <form name="deptVO">
        	<field property="dname" depends="required">
        		<arg0 key="dname" />
			</field>
			<field property="loc" depends="required">
                <arg0 key="loc" />
            </field>
        </form>
        
        <form name="empVO">
        	<field property="ename" depends="required">
        		<arg0 key="ename" />
			</field>
			<field property="job" depends="required">
                <arg0 key="job" />
            </field>
            <field property="manager" depends="required">
                <arg0 key="manager" />
            </field>
			<field property="hiredate" depends="required">
                <arg0 key="hiredate" />
            </field>
            <field property="salary" depends="required">
                <arg0 key="salary" />
            </field>
            <field property="dno" depends="required">
                <arg0 key="dno" />
            </field>
        </form>
        
        <form name="faqVO">
        	<field property="title" depends="required">
        		<arg0 key="title" />
			</field>
			<field property="content" depends="required">
                <arg0 key="content" />
            </field>
        </form>
    </formset>

</form-validation>